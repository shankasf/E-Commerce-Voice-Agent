# xAI Configuration
XAI_API_KEY=your_xai_api_key_here
XAI_VOICE=Ara

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER is optional for web dialer mode
# If set, calls will go through this Twilio number
# If not set or empty, dialer connects directly to AI agent via WebRTC
TWILIO_PHONE_NUMBER=

# Twilio API Key for Web Dialer (create at https://console.twilio.com/us1/account/keys-credentials/api-keys)
TWILIO_TWIML_APP_SID=your_twiml_app_sid
TWILIO_API_KEY_SID=your_api_key_sid
TWILIO_API_KEY_SECRET=your_api_key_secret

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Optional: Direct PostgreSQL connection
# DATABASE_URL=postgresql://user:password@host:5432/database

# Server Configuration
HOST=0.0.0.0
PORT=8087
DEBUG=false

# Webhook URL (for Twilio callbacks)
WEBHOOK_BASE_URL=https://your-domain.com

# Session Management
MAX_CONCURRENT_SESSIONS=50
SESSION_TIMEOUT_SECONDS=3600
