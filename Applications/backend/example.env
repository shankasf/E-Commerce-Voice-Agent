# Example .env file - Copy this to .env and fill in your values

# Required: Test user credentials for device registration
TEST_EMAIL=test@example.com
TEST_UE_CODE=TEST123

# LLM API Configuration (for LLM features)
# Prefer OpenAI, fallback to Mistral AI if OPENAI_API_KEY is not set
# If neither is provided, backend will use mock mode

# OpenAI Configuration (Preferred)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Mistral AI Configuration (Fallback)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-large-latest

# Backend Configuration
PORT=9000
HOST=0.0.0.0

# Database (JSON file path - created automatically)
DATABASE_PATH=mcp_agent_data.json

# Test Features (set to true to enable test endpoints like /api/tools/list-all)
# Set to false or remove to disable test features in production
ENABLE_TEST_FEATURES=false

