<Window x:Class="WindowsMcpAgent.Views.RestartCountdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Restart" Height="250" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Border BorderBrush="#FF0078D4" BorderThickness="2" CornerRadius="10" Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="System Restart" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock x:Name="CountdownText" Text="Restarting in 60 seconds..." 
                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" 
                           Foreground="#FF0078D4" Margin="0,0,0,10"/>
                <TextBlock Text="Please save your work." FontSize="14" 
                           HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,20"/>
                <ProgressBar x:Name="CountdownProgress" Minimum="0" Maximum="100" 
                             Height="10" Margin="0,0,0,20"/>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CancelButton" Content="Cancel Restart" 
                        Click="CancelButton_Click" Padding="15,5" Margin="0,0,10,0"/>
                <Button x:Name="ConfirmButton" Content="Restart Now" 
                        Click="ConfirmButton_Click" Padding="15,5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>


