<Window x:Class="WindowsMcpAgent.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows MCP Agent - Device Registration" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Windows MCP Agent" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Device Registration" FontSize="16" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Please enter your credentials to register this device" 
                       FontSize="12" Foreground="DarkGray" TextWrapping="Wrap"
                       HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Email" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Height="35" FontSize="14" Padding="10,5"
                     Margin="0,0,0,20" TextChanged="OnInputChanged"/>

            <TextBlock Text="U &amp; E Code" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="UECodeTextBox" Height="35" FontSize="14" Padding="10,5"
                     Margin="0,0,0,20" TextChanged="OnInputChanged"/>

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontSize="12" 
                       TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>
            
            <TextBlock x:Name="StatusTextBlock" Foreground="Blue" FontSize="12" 
                       TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RegisterButton" Content="Register Device" Width="150" Height="40"
                    FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0"
                    Click="RegisterButton_Click" IsEnabled="False"
                    Background="#0078D4" Foreground="White" BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Width="100" Height="40" FontSize="14"
                    Click="CancelButton_Click" IsCancel="True"
                    Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

