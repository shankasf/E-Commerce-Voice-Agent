<Window x:Class="WindowsApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Authentication - Login"
        Height="550"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern button style with hover effects -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern textbox style with focus effects -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label style for form fields -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main content container with padding -->
        <Border Background="White"
                Margin="30"
                CornerRadius="10"
                Padding="40">
            <Border.Effect>
                <!-- Subtle shadow for depth -->
                <DropShadowEffect Color="#000000"
                                Opacity="0.1"
                                BlurRadius="20"
                                ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <!-- Header Section -->
                <TextBlock Text="Welcome"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="#1E1E1E"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,5"/>

                <TextBlock Text="Authenticate your device"
                          FontSize="13"
                          Foreground="#666666"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,35"/>

                <!-- UE Code Input -->
                <TextBlock Text="Organization Code"
                          Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="UeCodeTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Text="{Binding UeCode, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,25">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding LoginCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Error Message Display -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="#D32F2F"
                          FontSize="12"
                          TextWrapping="Wrap"
                          Margin="0,0,0,15"
                          Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="Sign In"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsNotLoading}"
                        Margin="0,0,0,15"/>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Signing in..."
                              FontSize="12"
                              Foreground="#666666"
                              Margin="0,0,10,0"/>
                    <!-- Animated loading spinner -->
                    <TextBlock Text="â—"
                              FontSize="16"
                              Foreground="#007ACC">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" CenterX="8" CenterY="8"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0"
                                                       To="360"
                                                       Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>

                <!-- Device Information Display -->
                <Border BorderBrush="#E0E0E0"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,25,0,0"
                       Background="#FAFAFA">
                    <StackPanel>
                        <TextBlock Text="Device Information"
                                  FontSize="11"
                                  FontWeight="SemiBold"
                                  Foreground="#666666"
                                  Margin="0,0,0,10"/>

                        <TextBlock FontSize="10"
                                  Foreground="#888888">
                            <Run Text="Device: "/>
                            <Run Text="{Binding DeviceName}" FontWeight="Medium"/>
                        </TextBlock>

                        <TextBlock FontSize="10"
                                  Foreground="#888888"
                                  Margin="0,3,0,0">
                            <Run Text="OS: "/>
                            <Run Text="{Binding OsVersion}" FontWeight="Medium"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
