<Window x:Class="WindowsApp.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IT Support Assistant"
        Height="700"
        Width="1200"
        MinHeight="500"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- User message style -->
        <Style x:Key="UserMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Assistant message style -->
        <Style x:Key="AssistantMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Execution entry style -->
        <Style x:Key="ExecutionEntryStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <Grid Margin="16,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="IT Support Assistant"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"/>
                    <Border Background="#0E639C" CornerRadius="3" Padding="6,2" Margin="12,0,0,0"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Connected" FontSize="11" Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Connection Status -->
                <TextBlock Grid.Column="1"
                           Text="{Binding ConnectionStatus}"
                           FontSize="12"
                           Foreground="#858585"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <!-- Disconnect Button -->
                <Button Grid.Column="2"
                        Content="Disconnect"
                        Command="{Binding DisconnectCommand}"
                        Background="#3C3C3C"
                        Foreground="#CCCCCC"
                        Padding="12,6"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#4D4D4D"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content: Two Panes -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANE: Chat -->
            <Grid Grid.Column="0" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Chat Pane Header -->
                <Border Grid.Row="0" Background="#252526" Padding="12,8" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
                    <TextBlock Text="CHAT" FontSize="11" FontWeight="SemiBold" Foreground="#858585"/>
                </Border>

                <!-- Chat Messages -->
                <ScrollViewer Grid.Row="1"
                              x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Background="#1E1E1E">
                    <ItemsControl ItemsSource="{Binding ChatMessages}" Margin="12,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <!-- User Message -->
                                    <Border x:Name="UserMessage"
                                            Background="#2D2D30"
                                            CornerRadius="8"
                                            Padding="12,10"
                                            Visibility="Collapsed">
                                        <StackPanel>
                                            <TextBlock Text="You" FontSize="11" FontWeight="SemiBold" Foreground="#569CD6" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Content}"
                                                       TextWrapping="Wrap"
                                                       Foreground="#D4D4D4"
                                                       FontSize="13"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Assistant Message -->
                                    <Border x:Name="AssistantMessage"
                                            Background="Transparent"
                                            Padding="12,10"
                                            Visibility="Collapsed">
                                        <StackPanel>
                                            <TextBlock Text="Assistant" FontSize="11" FontWeight="SemiBold" Foreground="#4EC9B0" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Content}"
                                                       TextWrapping="Wrap"
                                                       Foreground="#D4D4D4"
                                                       FontSize="13"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- System Message -->
                                    <Border x:Name="SystemMessage"
                                            Background="#3E3E42"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            Visibility="Collapsed">
                                        <TextBlock Text="{Binding Content}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#CE9178"
                                                   FontSize="12"
                                                   FontStyle="Italic"/>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Role}" Value="user">
                                        <Setter TargetName="UserMessage" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="assistant">
                                        <Setter TargetName="AssistantMessage" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Role}" Value="system">
                                        <Setter TargetName="SystemMessage" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          Background="#3C3C3C"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Cursor="SizeWE"/>

            <!-- RIGHT PANE: Execution View -->
            <Grid Grid.Column="2" Background="#0D0D0D">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Execution Pane Header -->
                <Border Grid.Row="0" Background="#1A1A1A" Padding="12,8" BorderBrush="#2D2D2D" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="EXECUTION" FontSize="11" FontWeight="SemiBold" Foreground="#858585"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsExecuting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Ellipse Width="8" Height="8" Fill="#4EC9B0" Margin="0,0,6,0"/>
                            <TextBlock Text="Running..." FontSize="11" Foreground="#4EC9B0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Execution Output (Terminal Style) -->
                <ScrollViewer Grid.Row="1"
                              x:Name="ExecutionScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Background="#0D0D0D">
                    <ItemsControl ItemsSource="{Binding ExecutionEntries}" Margin="12,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,12">
                                    <StackPanel>
                                        <!-- Command Header -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="$" Foreground="#6A9955" FontFamily="Consolas" FontSize="12" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Command}"
                                                       Foreground="#DCDCAA"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                            <Border x:Name="StatusBadge" CornerRadius="3" Padding="6,1" Margin="10,0,0,0">
                                                <TextBlock x:Name="StatusText" FontSize="10" FontFamily="Consolas"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Command Output -->
                                        <Border Background="#111111" CornerRadius="4" Padding="10,8" Margin="16,0,0,0"
                                                Visibility="{Binding HasOutput, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Output}"
                                                       Foreground="#D4D4D4"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       TextWrapping="Wrap"/>
                                        </Border>

                                        <!-- Error Output -->
                                        <Border Background="#2D1515" CornerRadius="4" Padding="10,8" Margin="16,4,0,0"
                                                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Error}"
                                                       Foreground="#F48771"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       TextWrapping="Wrap"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="running">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#0E639C"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="RUNNING"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="success">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#2D5F2D"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="SUCCESS"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="#4EC9B0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="error">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#5F2D2D"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="ERROR"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="#F48771"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="pending">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#3C3C3C"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="PENDING"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="#858585"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasNoExecutions, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="No commands executed yet"
                               Foreground="#4D4D4D"
                               FontSize="13"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="AI will execute commands here when needed"
                               Foreground="#3C3C3C"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="#252526" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
            <Grid Margin="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Multi-line Input -->
                <Border Grid.Column="0" Background="#3C3C3C" CornerRadius="6">
                    <TextBox x:Name="MessageInput"
                             Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="#D4D4D4"
                             CaretBrush="#D4D4D4"
                             BorderThickness="0"
                             Padding="12,10"
                             FontSize="13"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxHeight="120"
                             VerticalScrollBarVisibility="Auto"
                             PreviewKeyDown="MessageInput_PreviewKeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Tag" Value="Visible"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>

                <!-- Placeholder Text -->
                <TextBlock Grid.Column="0"
                           Text="Type a message... (Enter to send, Shift+Enter for new line)"
                           Foreground="#6D6D6D"
                           FontSize="13"
                           Margin="12,10,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding IsInputEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Send Button -->
                <Button Grid.Column="1"
                        Content="Send"
                        Command="{Binding SendMessageCommand}"
                        Margin="12,0,0,0"
                        Padding="20,10"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="{Binding CanSendMessage}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1177BB"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#3C3C3C"/>
                                    <Setter Property="Foreground" Value="#6D6D6D"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
