{
  "name": "terminal-bridge-client",
  "version": "1.0.0",
  "description": "Terminal Bridge Client for AI Agent Terminal Access",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:dmg": "electron-builder --mac"
  },
  "build": {
    "appId": "com.callsphere.terminal-bridge",
    "productName": "Terminal Bridge",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "config.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "ws": "^8.16.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "author": "Callsphere LLC",
  "license": "ISC"
}
