<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %> | CallSphere DB Console</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="page">
    <div class="page-bg"></div>
    <header class="site-header">
      <div class="brand">
        <div class="brand-mark">CS</div>
        <div>
          <div class="brand-title">CallSphere DB Console</div>
          <div class="brand-subtitle">PostgreSQL control plane</div>
        </div>
      </div>
      <% if (user) { %>
        <nav class="nav">
          <a class="nav-link <%= currentPath === '/' ? 'active' : '' %>" href="/">Databases</a>
          <a class="nav-link <%= currentPath.startsWith('/users') ? 'active' : '' %>" href="/users">Users</a>
          <a class="nav-link <%= currentPath.startsWith('/performance') ? 'active' : '' %>" href="/performance">Performance</a>
          <a class="nav-link <%= currentPath.startsWith('/backup') ? 'active' : '' %>" href="/backup">Backup</a>
          <form class="nav-form" method="post" action="/logout">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="ghost" type="submit">Log out</button>
          </form>
        </nav>
      <% } %>
    </header>

    <% if (flash) { %>
      <div class="flash <%= flash.type %>">
        <span><%= flash.message %></span>
      </div>
    <% } %>

    <main class="content">
